<Window x:Class="Bapers.GUI.createAcc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bapers.GUI"
        mc:Ignorable="d"
        Title="createAcc" Height="632" Width="984" Background="#FFE4DCCF">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="198*"/>
            <RowDefinition Height="403*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="705*"/>
            <ColumnDefinition Width="271*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="20,21,0,0" Height="39" Width="254" FontFamily="Global Serif" FontSize="36"><Run Text="Create"/><Run Text=" Account"/></TextBlock>
        <TextBox x:Name="firstname_txtBox" HorizontalAlignment="Left" Height="25" Margin="295,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="545" TextChanged="TextBox_TextChanged" FontSize="18" FontFamily="Verdana" Background="#FF959697" Grid.ColumnSpan="2"/>
        <TextBox x:Name="surname_txtBox" HorizontalAlignment="Left" Height="25" Margin="295,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="545" TextChanged="TextBox_TextChanged" FontSize="18" FontFamily="Verdana" Background="#FF959697" Grid.ColumnSpan="2"/>
        <TextBox x:Name="telephone_txtBox" HorizontalAlignment="Left" Height="25" Margin="295,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="545" TextChanged="TextBox_TextChanged" FontSize="18" FontFamily="Verdana" Background="#FF959697" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <TextBlock Margin="145,102,425,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Global Serif" FontSize="24" TextAlignment="Right"><Run Text="First Name"/><Run Text=" "/><Run Text=": "/></TextBlock>
        <TextBlock Margin="145,136,425,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Global Serif" FontSize="24" TextAlignment="Right"><Run Text="Surn"/><Run Text="ame"/><Run Text=" "/><Run Text=": "/></TextBlock>
        <TextBlock Margin="110,171,425,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Global Serif" FontSize="24" TextAlignment="Right" Grid.RowSpan="2"><Run Text="Telephone No."/><Run Text=" "/><Run Text=": "/></TextBlock>
        <Button x:Name="login_btn" Content="LOGOUT" HorizontalAlignment="Left" Height="25" Margin="140,347,0,0" VerticalAlignment="Top" Width="80" Click="logOut_Click" Background="#FF918F8B" FontFamily="Segoe UI Semibold" FontSize="16" Foreground="Black" Grid.Column="1" Grid.Row="1"/>
        <Button x:Name="back_btn" Content="BACK" HorizontalAlignment="Left" Height="25" Margin="45,347,0,0" VerticalAlignment="Top" Width="80" Click="back_Click" Background="#FF918F8B" FontFamily="Segoe UI Semibold" FontSize="16" Foreground="Black" Grid.Row="1"/>
        <TextBlock Margin="110,9,425,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Global Serif" FontSize="24" TextAlignment="Right" Grid.Row="1"><Run Text="Company name"/><Run Text=" "/><Run Text=": "/></TextBlock>
        <TextBox x:Name="compName_txtBox" HorizontalAlignment="Left" Height="25" Margin="295,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="545" TextChanged="TextBox_TextChanged" FontSize="18" FontFamily="Verdana" Background="#FF959697" Grid.ColumnSpan="2" Grid.Row="1"/>
        <TextBox x:Name="address_txtBox" HorizontalAlignment="Left" Height="25" Margin="295,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="545" TextChanged="TextBox_TextChanged" FontSize="18" FontFamily="Verdana" Background="#FF959697" Grid.ColumnSpan="2" Grid.Row="1"/>
        <TextBlock Margin="104,43,431,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Global Serif" FontSize="24" TextAlignment="Right" Text="Address :" Grid.Row="1"/>
        <Button x:Name="create_btn" Content="CREATE" HorizontalAlignment="Left" Height="40" Margin="7,92,0,0" VerticalAlignment="Top" Width="128" Click="create_Click" Background="#FF918F8B" FontFamily="Segoe UI Semibold" FontSize="22" Foreground="Black" Grid.Column="1" FontWeight="Bold" Grid.Row="1"/>
        <TextBlock Margin="145,86,288,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Global Serif" TextAlignment="Right" Text="*All fields are required"/>

    </Grid>
</Window>
