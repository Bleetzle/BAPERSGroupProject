<Window x:Class="Bapers.GUI.addJobs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bapers.GUI"
        mc:Ignorable="d"
        Title="addJobs" Height="517" Width="800" Background="#FFE4DCCF">
    <Grid Height="486" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="58*"/>
            <ColumnDefinition Width="41*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="addJobFor" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="20,21,0,0" Height="44" Width="715" FontFamily="Global Serif" FontSize="36" Text="Add jobs for:" Grid.ColumnSpan="2"/>
        <TextBlock Margin="104,70,225,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Global Serif" FontSize="24" TextAlignment="Right"><Run Text="Tasks"/><Run Text=" "/><Run Text=": "/></TextBlock>
        <TextBlock Margin="104,104,225,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Global Serif" FontSize="24" TextAlignment="Right"><Run Text="Deadline"/><Run Text="*"/><Run Text=" "/><Run Text=": "/></TextBlock>
        <TextBlock Margin="24,138,225,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Global Serif" FontSize="24" TextAlignment="Right"><Run Text="Special Instructions"/><Run Text=" "/><Run Text=": "/></TextBlock>
        <ComboBox x:Name="tasks_dropDown" HorizontalAlignment="Left" Height="26" Margin="244,73,0,0" VerticalAlignment="Top" Width="375" Background="{x:Null}" BorderBrush="#FFACACAC" Foreground="Black" IsReadOnly="True" SelectedIndex="0" SelectionChanged="onChange" Grid.ColumnSpan="2">
            <ListBoxItem ContentStringFormat="Select All That Apply:" Content="Please Select:" IsSelected="True" />
        </ComboBox>
        <TextBox x:Name="specialIn_txtBox" HorizontalAlignment="Left" Height="78" Margin="244,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="375" TextChanged="TextBox_TextChanged" FontSize="11" FontFamily="Verdana" Background="#FF959697" Grid.ColumnSpan="2"/>
        <Button x:Name="login_btn" Content="LOGOUT" HorizontalAlignment="Left" Height="25" Margin="226,435,0,0" VerticalAlignment="Top" Width="80" Click="logOut_Click" Background="#FF918F8B" FontFamily="Segoe UI Semibold" FontSize="16" Foreground="Black" Grid.Column="1"/>
        <Button x:Name="back_btn" Content="BACK" HorizontalAlignment="Left" Height="25" Margin="20,435,0,0" VerticalAlignment="Top" Width="80" Click="back_Click" Background="#FF918F8B" FontFamily="Segoe UI Semibold" FontSize="16" Foreground="Black"/>
        <Button x:Name="addJob_btn" Content="Add Job" HorizontalAlignment="Left" Height="25" Margin="177,195,0,0" VerticalAlignment="Top" Width="80" Click="addJob_Click" Background="#FF918F8B" FontFamily="Segoe UI Semibold" FontSize="16" Foreground="Black" Grid.Column="1"/>
        <TextBlock x:Name="jobsAdded" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="40,215,0,0" Height="25" Width="110" FontFamily="Global Serif" FontSize="22" Text="Jobs added:"/>
        <DatePicker x:Name="deadline_date" HorizontalAlignment="Left" Margin="244,109,0,0" VerticalAlignment="Top" Width="122" FirstDayOfWeek="Monday" SelectedDateFormat="Short" DisplayDate="2021-03-22" IsTodayHighlighted="True"/>
        <ComboBox x:Name="time_dropDown" HorizontalAlignment="Left" Height="24" Margin="399,109,0,0" VerticalAlignment="Top" Width="85" Background="{x:Null}" BorderBrush="#FFACACAC" Foreground="Black" IsReadOnly="True" SelectedIndex="0" Grid.ColumnSpan="2">
            <ListBoxItem ContentStringFormat="Select All That Apply:" Content="Time:" IsSelected="True" />
            <ListBoxItem Content="07:00 AM"/>
            <ListBoxItem Content="08:00 AM"/>
            <ListBoxItem Content="09:00 AM"/>
            <ListBoxItem Content="10:00 AM"/>
            <ListBoxItem Content="11:00 AM"/>
            <ListBoxItem Content="12:00 PM"/>
            <ListBoxItem Content="01:00 PM"/>
            <ListBoxItem Content="02:00 PM"/>
            <ListBoxItem Content="03:00 PM"/>
            <ListBoxItem Content="04:00 PM"/>
            <ListBoxItem Content="05:00 PM"/>
            <ListBoxItem Content="06:00 PM"/>
        </ComboBox>
        <DataGrid x:Name="jobsGrid" ItemsSource = "{Binding}" HorizontalAlignment="Left" Height="160" Margin="40,245,0,0" VerticalAlignment="Top" Width="695" Background="#FFACACAC" IsReadOnly="True" Grid.ColumnSpan="2"/>
        <DataGrid x:Name="taskGrid" ItemsSource = "{Binding}" HorizontalAlignment="Left" Height="140" Margin="388,54,-537,0" VerticalAlignment="Top" Width="477" Background="#FFACACAC" IsReadOnly="True" Grid.Column="1"/>
    </Grid>
</Window>
